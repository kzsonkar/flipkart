<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite parallel="tests" thread-count="5" name="BrowserStack - Flipkart get product details">

	<test name="Windows, 10 - Chrome - GetProductDetails">
		<parameter name="os" value="Windows" />
		<parameter name="os_version" value="10" />
		<parameter name="browser" value="chrome" />
		<parameter name="browser_version" value="103.0" />
		<classes>
			<class name="com.browserStack.flipkart.Tests.GetProductDetailsTests" />
		</classes>
	</test> <!-- ProductDetails -->

	<test name="Mac, Catalina - Edge - GetProductDetails">
		<parameter name="os" value="OS X" />
		<parameter name="os_version" value="Catalina" />
		<parameter name="browser" value="edge" />
		<parameter name="browser_version" value="103.0" />
		<classes>
			<class name="com.browserStack.flipkart.Tests.GetProductDetailsTests" />
		</classes>
	</test> <!-- ProductDetails -->

	<test name="Mac, Catalina - Firefox - GetProductDetails">
		<parameter name="os" value="Windows" />
		<parameter name="os_version" value="10" />
		<parameter name="browser" value="firefox" />
		<parameter name="browser_version" value="100.0" />
		<classes>
			<class name="com.browserStack.flipkart.Tests.GetProductDetailsTests" />
		</classes>
	</test> <!-- ProductDetails -->

</suite> <!-- Flipkart get product details -->
